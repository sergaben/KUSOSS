
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# registration for kstudents
POST        /signup              controllers.Signup.signup
# Log in users
POST        /login               controllers.Login.login
# Log out user
POST        /logout              controllers.Logout.logout
# Insert post into database
POST        /savePost            controllers.SavePost.savePost
# Get posts from databse as stream
GET         /posts              controllers.PostBySubject.getPosts(subject: String)
# Getting subjects from database and converting them into scala objects
GET         /subjects            controllers.Subjects.getSubjectsNamesAsJson
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

